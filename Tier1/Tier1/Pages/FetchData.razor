@page "/fetchdata"

@using Tier1.Data
@inject IUserService UserService

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from a service.</p>

@if (forecasts == null)
{
    <p>
        <em>Loading...</em>
    </p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Date</th>
            <th>Temp. (C)</th>
            <th>Temp. (F)</th>
            <th>Summary</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var forecast in forecasts)
        {
            <tr>
                <td>@forecasts</td>
                <td>@forecasts</td>
                <td>@forecasts</td>
                <td>@forecasts</td>
            </tr>
        }
        </tbody>
    </table>
}

@code {
    private string forecasts;

    protected override async Task OnInitializedAsync()
    {
        forecasts = UserService.getcurrentName();
    }

}